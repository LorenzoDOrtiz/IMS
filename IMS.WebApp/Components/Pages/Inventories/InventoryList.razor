@page "/inventories"

<PageTitle>Inventory</PageTitle>

<h3>InventoryList</h3>
<br />
<br />
<EditForm Model="inventoryNameToSearch" FormName="formSearchInv">
    <div class="input-group">
        <InputText class="form-control"
                   placeholder="Type inventory name here to search"
                   @bind-Value="inventoryNameToSearch" >
        </InputText>
        <button type="submit" class="btn-success input-group-text">Search</button>
    </div>
</EditForm>
<br />
<InventoryListComponent SearchInventoryFilter="@inventoryNameToSearch" />
<br />

<a class="btn btn-primary" role="button" href="/addinventory">Add Inventory</a>

@code {
    [SupplyParameterFromForm]
    private string inventoryNameToSearch { get; set; } = string.Empty;
}